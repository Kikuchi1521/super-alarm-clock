<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetInfoActivity">

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="キャンセル"
        android:textSize="15sp"
        android:textColor="@color/black"
        style="?android:attr/borderlessButtonStyle"

        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_week_setting" />


    <TextView
        android:id="@+id/text_week_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="曜日ごとの設定"
        android:textSize="25sp"

        android:layout_margin="25dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cancel" />

    <TextView
        android:id="@+id/text_mon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="月："
        android:textSize="30sp"

        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_week_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_mon" />

    <Spinner
        android:id="@+id/spinner_mon"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:entries="@array/when_start_item"

        app:layout_constraintTop_toTopOf="@+id/text_mon"
        app:layout_constraintStart_toEndOf="@+id/text_mon"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_tue"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="火："
        android:textSize="30sp"

        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_mon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_tue" />

    <Spinner
        android:id="@+id/spinner_tue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:entries="@array/when_start_item"

        app:layout_constraintTop_toTopOf="@+id/text_tue"
        app:layout_constraintStart_toEndOf="@+id/text_tue"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_wed"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="水："
        android:textSize="30sp"

        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_tue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_wed" />

    <Spinner
        android:id="@+id/spinner_wed"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:entries="@array/when_start_item"

        app:layout_constraintTop_toTopOf="@+id/text_wed"
        app:layout_constraintStart_toEndOf="@+id/text_wed"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_thu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="木："
        android:textSize="30sp"

        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_wed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_thu" />

    <Spinner
        android:id="@+id/spinner_thu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:entries="@array/when_start_item"

        app:layout_constraintTop_toTopOf="@+id/text_thu"
        app:layout_constraintStart_toEndOf="@+id/text_thu"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_fri"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="金："
        android:textSize="30sp"

        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_thu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_fri" />

    <Spinner
        android:id="@+id/spinner_fri"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:entries="@array/when_start_item"

        app:layout_constraintTop_toTopOf="@+id/text_fri"
        app:layout_constraintStart_toEndOf="@+id/text_fri"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_sat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="土："
        android:textSize="30sp"

        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_fri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_sat" />

    <Spinner
        android:id="@+id/spinner_sat"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:entries="@array/when_start_item"

        app:layout_constraintTop_toTopOf="@+id/text_sat"
        app:layout_constraintStart_toEndOf="@+id/text_sat"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_time_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通学時間"
        android:textSize="25sp"

        android:layout_margin="25dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sat" />

    <Spinner
        android:id="@+id/edit_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:entries="@array/commuting_time_item"
        android:hint="(分)"

        app:layout_constraintTop_toBottomOf="@+id/text_time_setting"
        app:layout_constraintStart_toStartOf="@+id/text_time_setting" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存して戻る"
        android:textSize="20sp"

        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/edit_text"
        app:layout_constraintStart_toEndOf="@+id/edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>